{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CLI Queue Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["workflow_id", "description", "commands"],
    "properties": {
      "workflow_id": {"type": "string"},
      "description": {"type": "string"},
      "created_at": {"type": "string", "format": "date-time"},
      "priority": {"type": "string"},
      "metadata": {"type": "object"},
      "commands": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["cmd"],
          "properties": {
            "cmd": {"type": "string"},
            "path": {"type": "string"},
            "filename": {"type": "string"},
            "content": {"type": "string"},
            "prompt": {"type": "string"},
            "context_preference": {"type": "string"},
            "context_hint": {"type": "string"},
            "options": {"type": "object"},
            "expected_result": {"type": "string"},
            "expected_behavior": {"type": "string"},
            "expected_context_size": {"type": "string"},
            "performance_markers": {"type": "array", "items": {"type": "string"}},
            "json_path": {"type": "string"},
            "schema_path": {"type": "string"}
          }
        }
      }
    }
  }
}
